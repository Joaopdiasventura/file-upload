generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  email    String     @id @map("_id")
  name     String
  password String
  UserFile UserFile[]
}

model UserFile {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  canChange     Boolean
  isAdm         Boolean
  lastChange DateTime @default(now()) @map("last_change")
  user          String  @map("fk_user_email")
  file          String  @map("fk_file_id") @db.ObjectId
  fk_user_email User    @relation(references: [email], fields: [user])
  fk_file_id    File    @relation(references: [id], fields: [file], onDelete: Cascade)
}

model File {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  metadata Json
  UserFile UserFile[]
}
